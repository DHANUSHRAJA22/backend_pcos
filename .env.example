# PCOS Analyzer Backend Configuration
# Copy this file to .env and customize for your deployment

# API Configuration
PCOS_HOST=0.0.0.0
PCOS_PORT=8000
PCOS_DEBUG=true
PCOS_LOG_LEVEL=INFO

# Frontend Integration
PCOS_FRONTEND_URL=http://localhost:8080
PCOS_ALLOWED_ORIGINS=["http://localhost:8080", "http://127.0.0.1:8080"]

# Model File Paths - Update these to match your model locations
PCOS_FACE_MODEL_PATH=models/pcos_detector_158.h5
PCOS_FACE_LABELS_PATH=models/pcos_detector_158.labels.txt
PCOS_XRAY_MODEL_PATH=models/bestv8.pt

# File Upload Limits
PCOS_MAX_FILE_SIZE=10485760  # 10MB in bytes
PCOS_ALLOWED_EXTENSIONS=[".jpg", ".jpeg", ".png", ".webp"]

# Ensemble Configuration
PCOS_DEFAULT_ENSEMBLE_METHOD=weighted_voting
PCOS_FACE_MODEL_WEIGHT=0.6
PCOS_XRAY_MODEL_WEIGHT=0.4

# Risk Assessment Thresholds
PCOS_RISK_THRESHOLDS={"low": 0.3, "moderate": 0.7}

# Gender Detection
PCOS_ENABLE_GENDER_DETECTION=true
PCOS_GENDER_CONFIDENCE_THRESHOLD=0.8